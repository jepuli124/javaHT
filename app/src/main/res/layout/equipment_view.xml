<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="#2098F8">

    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/armor_1300179_1280" />

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtItemName"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtItemEffects"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnEquipToCharacter"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="Ota käyttöön"
            android:textSize="8sp" />

        <Button
            android:id="@+id/btnBurnToXp"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="muuta xp:si"
            android:textSize="8sp" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>