<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:background="#2098F8">

    <ImageView
        android:id="@+id/imageViewTombstone"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/tombstone2" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewNameDead"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:gravity="clip_horizontal"
            android:text="Nimi" />

        <TextView
            android:id="@+id/textViewLevelDead"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="clip_horizontal"
            android:text="Taso" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewTrophy"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/trophy_305554_640" />

        <TextView
            android:id="@+id/textViewWinAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Määrä"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>